{
  "name": "secure-messenger-desktop",
  "version": "1.0.0",
  "description": "Secure Messenger Desktop - Chat List + Sync Simulator",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "npm run build && electron .",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "webpack --config webpack.config.js",
    "watch": "concurrently \"npm run watch:main\" \"npm run watch:renderer\"",
    "watch:main": "tsc -p tsconfig.main.json --watch",
    "watch:renderer": "webpack --config webpack.config.js --watch",
    "clean": "rimraf dist"
  },
  "keywords": ["electron", "react", "typescript", "messenger", "sqlite", "websocket"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^27.1.0",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "html-webpack-plugin": "^5.5.4",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.14.20",
    "@mui/icons-material": "^5.14.19",
    "@reduxjs/toolkit": "^2.0.1",
    "@types/react-window": "^1.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.0.4",
    "react-window": "^1.8.10",
    "sql.js": "^1.10.3",
    "ws": "^8.16.0"
  }
}
